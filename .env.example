# Andre Environment Configuration
# Copy this to .env and fill in your values
# Generate SECRET_KEY with: python3 -c "import secrets; print(secrets.token_hex(32))"

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Your domain (without https://)
HOSTNAME=andre.dylanbochman.com

# Set to false for production
DEBUG=false

# Flask secret key for session encryption (REQUIRED - generate a unique value)
SECRET_KEY=

# =============================================================================
# REDIS
# =============================================================================

# Use 'redis' when running in Docker, 'localhost' for local development
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# SPOTIFY OAUTH (REQUIRED)
# =============================================================================
# Get these from https://developer.spotify.com/dashboard

SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_USERNAME=

# =============================================================================
# GOOGLE OAUTH (REQUIRED)
# =============================================================================
# Get these from https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# ACCESS CONTROL
# =============================================================================

# Comma-separated list of allowed email domains for login
ALLOWED_EMAIL_DOMAINS=gmail.com,dylanbochman.com

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# YouTube API key (for YouTube song support)
# YT_API_KEY=

# SoundCloud client ID (for SoundCloud song support)
# SOUNDCLOUD_CLIENT_ID=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Email to use for dev bypass auth (only works when DEBUG=true on localhost)
# DEV_AUTH_EMAIL=dev@example.com
